{
    "version": 2,
    "builds": [
      {
        "src": "backend/asgi.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.9"
        }
      },
      {
        "src": "build.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "headers": { "cache-control": "s-maxage=31536000, immutable" },
        "dest": "/static/$1"
      },
      {
        "src": "/",
        "dest": "backend/asgi.py"
      },
      { 
        "src": "/(.*)", 
        "status": 404, 
        "dest": "backend/asgi.py" 
      }
    ]
  }